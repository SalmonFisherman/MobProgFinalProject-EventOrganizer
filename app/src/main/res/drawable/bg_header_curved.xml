<?xml version="1.0" encoding="utf-8"?>
<vector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:width="200dp"
    android:height="120dp"
    android:viewportWidth="300"
    android:viewportHeight="170">

    <!-- Path untuk menggambar bentuk dengan lengkungan -->
    <path
        android:pathData="M0,0 L360,0 L360,180 Q180,240 0,180 Z">
        <!-- Mendefinisikan warna gradient untuk path di atas -->
        <aapt:attr name="android:fillColor">
            <gradient
                android:endX="220"
                android:endY="180"
                android:startX="0"
                android:startY="0"
                android:type="linear">
                <!-- Kamu bisa ganti warna ini sesuai tema -->
                <item android:color="#7C4DFF" android:offset="0.0" /> <!-- Ungu lebih gelap -->
                <item android:color="#BA68C8" android:offset="1.0" /> <!-- Ungu lebih terang -->
            </gradient>
        </aapt:attr>
    </path>
</vector>