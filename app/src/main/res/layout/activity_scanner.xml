<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/headerContainer"
        android:layout_width="0dp"
        android:layout_height="170dp"
        android:background="@drawable/header_gradient_purple"
        android:orientation="vertical"
        android:padding="18dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="@string/scanner_title"
            app:titleTextColor="@android:color/white"
            app:navigationIcon="@android:drawable/ic_menu_revert"
            app:navigationIconTint="@android:color/white"
            android:background="@android:color/transparent" />
        <TextView
            android:id="@+id/eventLabelTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Event"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginTop="8dp" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/scanButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/scan_qr"
            app:cornerRadius="14dp"
            android:layout_marginTop="10dp"
            app:backgroundTint="@android:color/white"
            android:textColor="@color/purple_700" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/statsContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="14dp"
        app:layout_constraintTop_toBottomOf="@id/headerContainer"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/totalInvitedTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Total invited: 0"
                android:textStyle="bold"
                android:textColor="@color/text_primary" />
            <TextView
                android:id="@+id/rsvpYesTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="RSVP yes: 0"
                android:textStyle="bold"
                android:textColor="@color/text_primary" />
            <TextView
                android:id="@+id/checkedInTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Checked-in: 0"
                android:textStyle="bold"
                android:textColor="@color/text_primary" />
        </LinearLayout>
        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/checkinProgressIndicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:indicatorColor="@color/purple_500"
            app:trackColor="@color/divider" />
        <TextView
            android:id="@+id/progressHintTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Progress checked-in vs RSVP yes"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="8dp" />
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/guestsRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="14dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/statsContainer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>