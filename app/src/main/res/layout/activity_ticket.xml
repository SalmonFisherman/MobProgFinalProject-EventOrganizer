<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F5F9"
    android:padding="20dp">

    <TextView
        android:id="@+id/confirmedTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You're confirmed"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#0F172A"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
        android:id="@+id/ticketCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp"
        android:background="@drawable/bg_ticket_card"
        app:layout_constraintTop_toBottomOf="@id/confirmedTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/guestNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guest Name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#111827"/>

        <TextView
            android:id="@+id/eventTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event â€¢ Date"
            android:textSize="14sp"
            android:textColor="#6B7280"
            android:layout_marginTop="4dp"/>

        <ImageView
            android:id="@+id/qrImageView"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:layout_marginTop="20dp"
            android:scaleType="fitCenter"/>

        <TextView
            android:id="@+id/tokenTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Token: XXXXX"
            android:textSize="12sp"
            android:textColor="#475569"
            android:layout_marginTop="12dp"/>

        <TextView
            android:id="@+id/checkinStatusTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check-in status: not checked-in yet"
            android:textSize="13sp"
            android:textColor="#0F766E"
            android:layout_marginTop="8dp"/>

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/shareLinkButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Share Ticket"
        android:textAllCaps="false"
        android:layout_marginTop="20dp"
        app:cornerRadius="14dp"
        app:backgroundTint="#7C4DFF"
        app:layout_constraintTop_toBottomOf="@id/ticketCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/copyTokenButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Copy Token"
        android:textAllCaps="false"
        android:layout_marginTop="12dp"
        app:cornerRadius="14dp"
        app:backgroundTint="#CBD5E1"
        app:layout_constraintTop_toBottomOf="@id/shareLinkButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
